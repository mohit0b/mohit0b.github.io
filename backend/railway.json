services:
  web:
    type: web
    plan: free
    env: node
    buildCommand: "npm install"
    startCommand: "npm start"
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 5001
      - key: DB_HOST
        sync: false
      - key: DB_PORT
        value: 3306
      - key: DB_NAME
        sync: false
      - key: DB_USER
        sync: false
      - key: DB_PASSWORD
        sync: false
      - key: CORS_ORIGIN
        value: https://mohit0b.github.io
      - key: JWT_SECRET
        sync: false
      - key: JWT_EXPIRES_IN
        value: 24h

  mysql:
    type: mysql
    plan: free
    region: oregon
